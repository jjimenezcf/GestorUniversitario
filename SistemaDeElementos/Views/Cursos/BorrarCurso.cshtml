@model Gestor.Elementos.Permiso.GrupoDto
@{
    ViewData["Title"] = $"{@ViewBag.Crud.Titulo}";
}

<h2>@ViewBag.Crud.Supresor.Titulo</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Creditos)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Creditos)
        </dd>
    </dl>

    <form asp-action=@ViewBag.Crud.Supresor.Accion>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@ViewBag.Crud.Supresor.Formulario class="btn btn-outline-warning" />
    </form>
    <div>
        <a asp-action=@ViewBag.Crud.Mantenimiento.Ir>@ViewBag.Crud.Mantenimiento.Titulo</a>
    </div>
</div>
