<!DOCTYPE html>
<html lang="es-es">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/seCrud.css" type="text/css">
    <link rel="stylesheet" href="~/css/seMenu.css" type="text/css">

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <script src="~/ts/Literales/Literales.js"></script>
    <script src="~/ts/tsUtilidades.js"></script>
    <script src="~/ts/tsInfoSelector.js"></script>
    <script src="~/ts/tsSelectores.js"></script>
    <script src="~/ts/Menu.js"></script>
    <script src="~/ts/_Crud/Grid.js"></script>
    <script src="~/ts/_Crud/CrudBase.js"></script>
    <script src="~/ts/_Crud/CrudCreacion.js"></script>
    <script src="~/ts/_Crud/CrudEdicion.js"></script>
    <script src="~/ts/_Crud/CrudMantenimiento.js"></script>
</head>

@using Gestor.Elementos

<body>
    @{
        var datosDeConexion = (DatosDeConexion)ViewBag.DatosDeConexion;
    }

    <div class="container-fluid">
        <header>
            <table id="tablaCabecera" class="table">
                <tr>
                    <td class="celdaCabeceraIzquierda">
                        <img id="id_menu"
                             src="~/images/menu/bars-solid.svg"
                             class="btn-menu fa-icono"
                             modal-menu="id-modal-menu"
                             onclick="Menu.MostrarMenu()"
                             menu-abierto="false" />

                        <input id="id_producto"
                               type="button"
                               class="etiquetaIzquierda"
                               value="Sitema de elementos" />
                    </td>
                    <td class="celdaSeparador">
                    </td>
                    <td class="celdaCabecera">
                        <input id="idConsultas" type="text" class="estiloCeldaCabecera" value="Consultas" readonly />
                    </td>
                    <td class="celdaCabecera">
                        <input id="idFavoritos" type="text" class="estiloCeldaCabecera" value="Favoritos" readonly />
                    </td>
                    <td class="celdaCabeceraDerecha">
                        <input id="idusuario" type="text" class="estiloCeldaDerecha" value="@datosDeConexion.Usuario" readonly />
                    </td>
                </tr>
            </table>

            <div id="id-modal-menu" class="modal-menu">
                <div id="id_contenedormenu" class="menu-contenedor">
                </div>
            </div>

        </header>

        <div class="table">
            <div class="row">
                <div class="col">
                    <div id="contenido" style="width: 100%" ;>
                        <main role="main" class="pb-3">
                            @RenderBody()
                            <br />
                            <br />
                        </main>
                    </div>
                </div>
            </div>
        </div>

        <footer class="border-top footer text-muted">
            <div class="text-info" width="100%">
                <input id="Mensaje" style="width:100%" readonly value="" />
            </div>
            <div class="text-center">
                <div style="float: left">
                    &copy;@datosDeConexion.ServidorWeb - @datosDeConexion.ServidorBd:@datosDeConexion.Bd
                </div>
                <div style="float: right">
                    Version: @datosDeConexion.Version - Usuario: @datosDeConexion.Usuario
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </footer>


        @RenderSection("Scripts", required: false)

        <script>
            window.onload = Menu.ReqSolicitarMenu('@datosDeConexion.Usuario', 'id_contenedormenu');
        </script>

        <partial name="_CookieConsentPartial" />
    </div>
</body>
</html>




