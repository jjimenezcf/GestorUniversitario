@model GestorUniversitario.ModeloDeClases.Estudiante
@{
    ViewData["Title"] = $"{@ViewBag.Crud.Titulo}";
}

<h2>@ViewBag.Crud.GestorDeBorrado.Titulo</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.InscritoEl)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InscritoEl)
        </dd>
    </dl>

    <form asp-action=@ViewBag.Crud.GestorDeBorrado.Accion>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@ViewBag.Crud.GestorDeBorrado.Formulario class="btn btn-outline-warning" />
    </form>
    <div>
        <a asp-action=@ViewBag.Crud.GestorDeMantenimiento.Ir>@ViewBag.Crud.GestorDeMantenimiento.Titulo</a>
    </div>
</div>
